<odoo>
    <data>
        <!-- Chương trình Khuyến mại: Form view -->
        <record id="view_promotion_program_form" model="ir.ui.view">
            <field name="name">promotion.program.form</field>
            <field name="model">promotion.program</field>
            <field name="arch" type="xml">
                <form string="Chương Trình Khuyến Mại">
                    <sheet>
                        <notebook>
                            <!-- Tab 1: Thông tin cơ bản -->
                            <page string="Thông tin Khuyến Mại">
                                <group>
                                    <field name="name" placeholder="Tên Chương Trình"/>
                                    <field name="engine_number" placeholder="Số Máy (Engine)"/>
                                    <field name="main_road" placeholder="Cung Đường Chính"/>
                                    <field name="body_type" placeholder="Loại Thùng"/>
                                    <field name="body_marker" placeholder="Nơi Làm Thùng"/>
                                    <field name="transmission" placeholder="Hộp Số"/>
                                    <field name="delivery_date" placeholder="Ngày Giao Đại Lý"/>
                                    <field name="owner_email" placeholder="Email Chủ Xe"/>
                                    <field name="customer_revenue" placeholder="Doanh Thu Khách Hàng"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Menu item to access the Promotion Program -->
        <menuitem id="menu_promotion_program" name="Chương Trình Khuyến Mại" parent="menu_repair_orders_main" action="action_promotion_program"/>

        <!-- Action to show the promotion program -->
        <!-- <record id="action_promotion_program" model="ir.actions.act_window">
            <field name="name">Promotion Program</field>
            <field name="res_model">promotion.program</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record> -->

    </data>
</odoo>
