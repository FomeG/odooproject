<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_repair_order_form" model="ir.ui.view">
        <field name="name">repair.order.form.inherit</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <group string="Thông tin chung">
                    <group>
                        <field name="x_customer_feedback"/>
                        <field name="x_notes"/>
                        <field name="x_content"/>
                        <field name="x_pricelist_id"/>
                    </group>
                    <group>
                        <field name="x_total"/>
                        <field name="x_tax_amount"/>
                        <field name="x_total_amount"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
    <!-- Action Lệnh sửa chữa -->
    <record id="action_repair_orders" model="ir.actions.act_window">
        <field name="name">Lệnh sửa chữa</field>
        <field name="res_model">repair.order</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_repair_order_form"/>
    </record>

    <!-- Action Báo giá -->
    <record id="action_repair_quotes" model="ir.actions.act_window">
        <field name="name">Báo giá</field>
        <field name="res_model">repair.order</field>  <!--        chỉnh lại tên model sau-->
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Action Đơn đặt hàng (LSC) -->
    <record id="action_repair_orders_lsc" model="ir.actions.act_window">
        <field name="name">Đơn đặt hàng (LSC)</field>
        <field name="res_model">repair.order</field> <!--        chỉnh lại tên model sau-->
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Action Yêu cầu thanh toán với HMV -->
    <record id="action_repair_payment_request" model="ir.actions.act_window">
        <field name="name">Yêu cầu thanh toán với HMV</field>
        <field name="res_model">repair.order</field>   <!--        chỉnh lại tên model sau-->

        <field name="view_mode">tree,form</field>
    </record>



</odoo>
